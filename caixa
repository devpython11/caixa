import os

extrato = []

os.system('cls')
renda_atual = float(input("DIGITE SUA RENDA ATUAL: "))

while True:
    boool = str(input("DIGITE 1 SE QUER ADICIONAR, DIGITE 2 SE QUE TIRAR, DIGITE 3 SE QUER VER EXTRATO: "))
    if boool == "1":
        add = float(input("DIGITE QUANTO:  "))
        renda_atual = renda_atual + add
        extrato.append(renda_atual)
        
        os.system('cls')
        print("sua renda atual é", renda_atual)        

    if boool == "2":
        add = float(input("DIGITE QUANTO: "))
        renda_atual = renda_atual - add
        extrato.append(renda_atual)
        
        os.system('cls')
        print("sua renda atual é", renda_atual)
        
    if boool == "3":
        print(extrato)
        
    
    
    if boool == "fim":
        break
