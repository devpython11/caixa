import os

os.system('cls')
renda_atual = float(input("DIGITE SUA RENDA ATUAL: "))

while True:
    boool = str(input("DIGITE 1 SE QUER ADICONAR, DIGITE 2 SE QUE TIRAR: "))
    if boool == "1":
        add = float(input("DIGITE QUANTO:  "))
        renda_atual = renda_atual + add
        
        os.system('cls')
        print("sua renda atual é", renda_atual)        

    if boool == "2":
        add = float(input("DIGITE QUANTO: "))
        renda_atual = renda_atual - add
        
        os.system('cls')
        print("sua renda atual é", renda_atual)
        
    if boool == "fim":
        break
